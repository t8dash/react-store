{
  "name": "@t8/react-store",
  "version": "1.0.10",
  "description": "Straightforward and minimalist shared state management for React apps",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx npm-run-all clean compile",
    "clean": "node -e \"require('node:fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "npx esbuild index.ts --bundle --outdir=dist --platform=neutral --external:react",
    "gh-pages": "npx ghstage --theme=t8 --ymid=103784239 --backstory=https://axtk.github.io/x/t8_react_store --nav=https://raw.githubusercontent.com/t8js/t8js.github.io/refs/heads/main/assets/nav.html",
    "prepublishOnly": "npx npm-run-all build gh-pages",
    "preversion": "npx npm-run-all typecheck shape build",
    "shape": "npx codeshape",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/react-store.git"
  },
  "homepage": "https://t8.js.org/react-store",
  "keywords": [
    "react",
    "shared state",
    "store"
  ],
  "author": "axtk",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@t8/store": "^1.1.2"
  }
}
